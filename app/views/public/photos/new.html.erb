<!--写真投稿ページ-->
<div class="container my-5">
    <h2>new photo</h2>
    <div class="row">
        <%= form_with model: @photo, url: photos_path, local:true do |f| %>
        <div class="col-sm-10">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <td></td>
                        <td><%= f.attachment_field :image %></td>
                    </tr>
                    <tr>
                        <td width="120"><%= f.label :撮影場所 %></td>
                        <td><%= f.text_field :address, class: "form-control" %></td>
                    </tr>
                    <tr>
                        <td width="120"><%= f.label :本文 %></td>
                        <td><%= f.text_area :introduction, class: "form-control", :size=>"60x10" %></td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group row">
                <%= f.submit "保存" ,class: 'btn btn-success' %>
            </div>
        </div>
    </div>
</div>
<% end %>


