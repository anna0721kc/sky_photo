<!--会員側／新規登録-->
<div class="container my-5">
  <div class="wrapper form-signin">
    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <h3 class="form-signin-heading">新規登録</h3>
    <hr class="colorgraph"><br>
    <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 桁以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <% end %>
<div class="actions mt-3">
<%= render "public/shared/links" %>
</div>

</div>
</div>