<%= form_with model: @customer, url:customer_registration_path, local: true do |f| %>
<div class="container my-5 ml-sm-5">
  <%= render "public/shared/error_messages", resource: resource %>
<h2>マイページ編集</h2>
  <div class="field">
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :紹介文 %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", :size=>"60x10" %>
  </div>

<div class="field">
    <%= f.label :password, "パスワード変更" %> <i>(変更しない場合は入力不要)</i><br />
    <em><%= @minimum_password_length %>文字以上</em><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />

    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード変更(確認)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %> <i>(変更する場合は入力して下さい)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存", class: "btn btn-success my-3" %>
    <%= link_to "退会へ", customers_unsubscribe_path(@customer), class: "btn btn-danger my-3 ml-5" %>
  </div>
  </div>
<% end %>