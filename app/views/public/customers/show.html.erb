<!--会員側／マイページ-->

<div class="container my-3">
<h3>マイページ</h3>
<%= attachment_image_tag @customer, :profile_image, :fill, 300, 300, format: 'jpeg', fallback: "noimage.png" %>
</div>
<table class="table table-borderless">
  <tbody>
    <tr>
      <td>ユーザー名</td>
      <td><%= @customer.name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>
<% if @customer == current_customer %>
<%= link_to "編集", edit_customer_registration_path(@customer), class: "btn btn-success" %>
<%= link_to "お気に入り一覧", customer_favorites_path(current_customer), class: "btn btn-success" %>
<% end %>