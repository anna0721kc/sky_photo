<!--会員側／マイページ-->

<div class="container mt-3 mx-2 border-bottom">
<h3>マイページ</h3>

<div class="profile-container d-flex mx-auto justify-content-around align-items-center py-5">
<%= attachment_image_tag @customer, :profile_image, :fill, 350, 350, format: 'jpeg', fallback: "noimage.png" %>
<table class="table table-borderless">
  <tbody>
    <tr>
      <td>ユーザー名</td>
      <td><%= @customer.name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>紹介文</td>
      <td><%= @customer.introduction %></td>
    </tr>
  </tbody>
</table>
</div>
<% if @customer == current_customer %>
<%= link_to "編集", edit_customer_registration_path(@customer), class: "btn btn-success ml-5 my-3" %>
<%= link_to "お気に入り一覧", customer_favorites_path(current_customer), class: "btn btn-success ml-3 my-3" %>
<% end %>
</div>
<!--自分の写真一覧-->