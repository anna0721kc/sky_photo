<!--管理者側/会員詳細-->
<div class="container my-5 w-50">
<h3>
  <%= @customer.name %>さん
</h3>
<table class="table">
  <tbody>
    <tr>
      <td>会員ＩＤ</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>ユーザー名</td>
      <td><%= @customer.name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>有効／退会</td>
      <td><%= @customer.is_deleted ? '有効' : '退会' %></td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
</div>